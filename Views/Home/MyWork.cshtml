@{
    ViewData["Title"] = "My Work";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <p>Welcome to KhumaloCraft! Here are some of our exquisite craftworks:</p>

    <a href="@Url.Action("History", "Order")" class="btn btn-secondary mb-3">View Order History</a>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <img src="~/images/vase.webp" class="card-img-top" alt="Handcrafted Vase">
                <div class="card-body">
                    <h5 class="card-title">Handcrafted Vase</h5>
                    <p class="card-text">A beautiful handcrafted vase, made from clay and natural paint.</p>
                    <p><strong>Price:</strong> R450.00</p>
                    <p><strong>Availability:</strong> <span class="text-success">Available</span></p>
                    <form method="post" asp-controller="Order" asp-action="AddToOrder">
                        <input type="hidden" name="productId" value="1" />
                        <button type="submit" class="btn btn-primary">Add to Order</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="~/images/sculpture.jpg" class="card-img-top" alt="Bronze Sculpture">
                <div class="card-body">
                    <h5 class="card-title">Bronze Sculpture</h5>
                    <p class="card-text">An intricately carved bronze sculpture, of the sacred Ibis</p>
                    <p><strong>Price:</strong> R700.00</p>
                    <p><strong>Availability:</strong> <span class="text-success">Available</span></p>
                    <form method="post" asp-controller="Order" asp-action="AddToOrder">
                        <input type="hidden" name="productId" value="2" />
                        <button type="submit" class="btn btn-primary">Add to Order</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="~/images/bowl.webp" class="card-img-top" alt="Ceramic Bowl">
                <div class="card-body">
                    <h5 class="card-title">Ceramic Bowl</h5>
                    <p class="card-text">A unique tribal ceramic bowl with intricate designs, made with natural materials</p>
                    <p><strong>Price:</strong> R300.00</p>
                    <p><strong>Availability:</strong> <span class="text-success">Available</span></p>
                    <form method="post" asp-controller="Order" asp-action="AddToOrder">
                        <input type="hidden" name="productId" value="3" />
                        <button type="submit" class="btn btn-primary">Add to Order</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
